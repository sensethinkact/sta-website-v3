{
  "name": "sta-website-v2",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "debug": "DEBUG=true next dev",
    "build": "run-s build:next build:rss build:sitemap && next export",
    "build:next": "next build",
    "build:rss": "npm run script -- scripts/generate-rss.ts",
    "build:sitemap": "next-sitemap",
    "script": "ts-node --project tsconfig.scripts.json",
    "start": "next start",
    "prettier": "prettier --ignore-path .gitignore \"**/*.(js|jsx|json|yml|yaml|css|ts|tsx|md|mdx)\"",
    "format": "npm run prettier -- --write",
    "check-format": "npm run prettier -- --list-different",
    "lint": "next lint",
    "validate": "run-s check-format lint build"
  },
  "dependencies": {
    "@sta-podcast/post-loader": "^1.4.1",
    "bulma": "^1.0.2",
    "classnames": "^2.5.1",
    "dayjs": "^1.11.13",
    "next": "14.2.13",
    "node-fetch": "^3.3.2",
    "podcast": "^2.0.1",
    "proper-url-join": "^2.1.1",
    "react": "18.3.1",
    "react-copy-to-clipboard": "^5.1.0",
    "react-dom": "18.3.1",
    "react-youtube": "^10.1.0",
    "sharp": "^0.33.5",
    "yaml": "^2.5.1"
  },
  "devDependencies": {
    "@sta-podcast/types": "^1.0.7",
    "@tsconfig/node16": "^16.1.3",
    "@types/node": "22.5.5",
    "@types/proper-url-join": "^2.1.4",
    "@types/react": "18.3.7",
    "@types/react-copy-to-clipboard": "^5.0.7",
    "endent": "^2.1.0",
    "eslint": "8.57.0",
    "eslint-config-next": "14.2.12",
    "next-sitemap": "^4.2.3",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.8.8",
    "prettier-plugin-organize-imports": "^4.0.0",
    "ts-node": "^10.9.2",
    "typescript": "5.5.4"
  }
}
